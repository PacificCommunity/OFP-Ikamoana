  <domain>
    <time>
      <start>2008-01-15</start>
      <sim_time>125</sim_time>
      <dt>86400</dt>
      <output_dt>7</output_dt>
    </time>
    <lat>
      <min>-40</min>
      <max>50</max>
    </lat>
    <lon>
