    <start_length>21.83</start_length>
    <ageing>True</ageing>
    <start_filestem>skj_age</start_filestem>
  </cohort_info>

  <mortality>
    <!-- If names in SEAPODYM configuration file and effort/catch files are not the same, -->
    <!-- their must be a convertion between theim. Leave <effort_file_name> empty if names -->
    <!-- are the same in both files. -->
    <selected_fisheries>
      <fishery name="P1" effort_file_name="1"/>
      <!-- <fishery name="P21" effort_file_name="2"/>
      <fishery name="P3" effort_file_name="3"/>
      <fishery name="S4" effort_file_name="4"/>
      <fishery name="S5" effort_file_name="5"/>
      <fishery name="S6" effort_file_name="6"/>
      <fishery name="S7" effort_file_name="7"/>
      <fishery name="8" effort_file_name="8"/>
      <fishery name="L9" effort_file_name="9"/>
